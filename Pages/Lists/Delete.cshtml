@page
@model LIST.Pages.Lists.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Add your CSS styles here */
    .details-container {
        margin-bottom: 20px;
    }

    .details-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .details-row {
        margin-bottom: 10px;
    }

    .details-label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .details-value {
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-danger:focus {
            outline: none;
        }

    .back-link {
        margin-top: 20px;
        display: block;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
    }

        .back-link:hover {
            color: #0056b3;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="details-container">
    <h4 class="details-title">List</h4>
    <hr />
    <dl class="details-row">
        <dt class="details-label col-sm-2">
            @Html.DisplayNameFor(model => model.List.Name)
        </dt>
        <dd class="details-value col-sm-10">
            @Html.DisplayFor(model => model.List.Name)
        </dd>
        <dt class="details-label col-sm-2">
            @Html.DisplayNameFor(model => model.List.email)
        </dt>
        <dd class="details-value col-sm-10">
            @Html.DisplayFor(model => model.List.email)
        </dd>
        <dt class="details-label col-sm-2">
            @Html.DisplayNameFor(model => model.List.phoneNumber)
        </dt>
        <dd class="details-value col-sm-10">
            @Html.DisplayFor(model => model.List.phoneNumber)
        </dd>
        <dt class="details-label col-sm-2">
            @Html.DisplayNameFor(model => model.List.addressee)
        </dt>
        <dd class="details-value col-sm-10">
            @Html.DisplayFor(model => model.List.addressee)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="List.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="back-link">Back to List</a>
    </form>
</div>
