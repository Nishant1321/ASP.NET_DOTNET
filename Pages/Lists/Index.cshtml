@page
@model LIST.Pages.Lists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Add your CSS styles here */
    .button-link {
        background:skyblue;
        border:red;
        padding:2px;
        font:inherit;
        cursor: pointer;
        color:blue; /* Blue color for links */
        
    }

    .button-link:hover {
        text-decoration:inherit;
    }

    .button-link:focus {
        outline:dotted;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
    }

    .table th {
        background-color: #f2f2f2;
    }
</style>

<h1>Index</h1>

<p>
    <button><a asp-page="Create" class="button-link">Create New</a></button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.List[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].phoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].addressee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.addressee)
            </td>
            <td>
                <button ><a asp-page="./Edit" asp-route-id="@item.Id" class="button-link ">Edit</a></button> |
                <button><a asp-page="./Details" asp-route-id="@item.Id" class="button-link">Details</a></button> |
                <button><a asp-page="./Delete" asp-route-id="@item.Id" class="button-link">Delete</a></button>
            </td>
        </tr>
        }
    </tbody>
</table>
