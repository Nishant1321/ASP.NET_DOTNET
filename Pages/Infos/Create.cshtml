@page
@model info.Pages.Infos.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Add your CSS styles here */

    /* Form styling */
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
        color:red; /* Dark gray color for labels */
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: #dc3545; /* Red color for validation messages */
    }

    /* Button styling */
    .btn-primary {
        background-color: #007bff; /* Blue color for primary buttons */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue color on hover */
        }

    /* Link styling */
    a {
        color: #007bff; /* Blue color for links */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

</style>

<h1>Create</h1>

<h4>Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Info.Name" class="control-label"></label>
                <input asp-for="Info.Name" class="form-control" />
                <span asp-validation-for="Info.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info.Description" class="control-label"></label>
                <input asp-for="Info.Description" class="form-control" />
                <span asp-validation-for="Info.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
